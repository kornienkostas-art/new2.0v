<Window x:Class="OptiDesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:OptiDesk.Views"
        xmlns:legacy="clr-namespace:OptiDesk.Views.Legacy"
        Title="OptiDesk" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Side Nav -->
        <Border Grid.RowSpan="2" Background="#111827"/>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Background="#111827">
            <TextBlock Text="OptiDesk" Foreground="White" FontSize="20" FontWeight="Bold" Margin="16,16,0,16" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#111827">
            <Button Content="Главная (старый интерфейс)" Click="OpenLegacy_Click" Margin="8,8,8,4" Padding="10"
                    Background="#1F2937" Foreground="White" BorderBrush="#374151"/>
            <Separator Margin="8,4" Background="#374151"/>
            <Button Content="Заказы МКЛ" Click="OpenOrdersMkl_Click" Margin="8,4" Padding="10"
                    Background="#1F2937" Foreground="White" BorderBrush="#374151"/>
            <Button Content="Заказы Меридиан" Click="OpenOrdersMeridian_Click" Margin="8,4" Padding="10"
                    Background="#1F2937" Foreground="White" BorderBrush="#374151"/>
            <Button Content="Прайсы" Click="OpenPrices_Click" Margin="8,4" Padding="10"
                    Background="#1F2937" Foreground="White" BorderBrush="#374151"/>
            <Separator Margin="8,4" Background="#374151"/>
            <Button Content="Настройки" Click="OpenSettings_Click" Margin="8,4,8,8" Padding="10"
                    Background="#1F2937" Foreground="White" BorderBrush="#374151"/>
        </StackPanel>

        <!-- Header -->
        <Border Grid.Row="0" Grid.Column="1" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <DockPanel LastChildFill="True" Margin="12,0">
                <TextBlock Text="Современная оболочка" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
            </DockPanel>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Grid.Column="1" Background="#FFFFFF">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>