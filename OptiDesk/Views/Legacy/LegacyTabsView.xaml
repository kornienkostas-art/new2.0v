<UserControl x:Class="OptiDesk.Views.Legacy.LegacyTabsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TabControl>
            <TabItem Header="Заказы МКЛ">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                        <Button Content="Новый заказ" Click="AddOrderMkl_Click" Margin="0,0,8,0"/>
                        <Button Content="Редактировать" Click="EditOrderMkl_Click" Margin="0,0,8,0"/>
                        <Button Content="Удалить" Click="DeleteOrderMkl_Click" Margin="0,0,8,0"/>
                        <Button Content="Клиент" Click="PickClientMkl_Click" Margin="0,0,8,0"/>
                        <Button Content="Товар" Click="PickProductMkl_Click" Margin="0,0,8,0"/>
                        <Button Content="Экспорт txt" Click="ExportOrderMklTxt_Click" Margin="0,0,8,0"/>
                        <Button Content="Сохранить" Click="SaveOrderMkl_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="OrderMklGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              CanUserDeleteRows="False"
                              IsReadOnly="False"
                              Margin="8"
                              SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                            <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}" Width="200"/>
                            <DataGridTextColumn Header="Бренд" Binding="{Binding Brand}" Width="150"/>
                            <DataGridTextColumn Header="Сфера" Binding="{Binding Sphere}" Width="80"/>
                            <DataGridTextColumn Header="Цилиндр" Binding="{Binding Cylinder}" Width="80"/>
                            <DataGridTextColumn Header="Ось" Binding="{Binding Axis}" Width="80"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="140"/>
                            <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt}" Width="140"/>
                            <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Заказы Меридиан">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                        <Button Content="Добавить" Click="AddOrderMeridian_Click" Margin="0,0,8,0"/>
                        <Button Content="Удалить" Click="DeleteOrderMeridian_Click" Margin="0,0,8,0"/>
                        <Button Content="Сохранить изменения" Click="SaveOrderMeridian_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="OrderMeridianGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              CanUserDeleteRows="False"
                              IsReadOnly="False"
                              Margin="8"
                              SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                            <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}" Width="200"/>
                            <DataGridTextColumn Header="Поставщик" Binding="{Binding Supplier}" Width="150"/>
                            <DataGridTextColumn Header="Тип линзы" Binding="{Binding LensType}" Width="150"/>
                            <DataGridTextColumn Header="Особые поля" Binding="{Binding SpecialFields}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="140"/>
                            <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt}" Width="140"/>
                            <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Прайсы">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                        <Button Content="Добавить" Click="AddPriceItem_Click" Margin="0,0,8,0"/>
                        <Button Content="Удалить" Click="DeletePriceItem_Click" Margin="0,0,8,0"/>
                        <Button Content="Сохранить изменения" Click="SavePriceItem_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="PriceGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              CanUserDeleteRows="False"
                              IsReadOnly="False"
                              Margin="8"
                              SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                            <DataGridTextColumn Header="Бренд/Поставщик" Binding="{Binding SupplierOrBrand}" Width="180"/>
                            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="250"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
                            <DataGridTextColumn Header="Примечание" Binding="{Binding Note}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>