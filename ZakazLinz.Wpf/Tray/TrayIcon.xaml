<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar">
    <tb:TaskbarIcon x:Key="AppTrayIcon"
                    ToolTipText="УссурОЧки.рф"
                    Visibility="Collapsed">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Открыть" Command="{Binding OpenMainCommand}"/>
                <MenuItem Header="Настройки" Command="{Binding OpenSettingsCommand}"/>
                <Separator/>
                <MenuItem Header="Автозапуск" IsCheckable="True" IsChecked="{Binding IsAutostartEnabled}" Command="{Binding ToggleAutostartCommand}"/>
                <Separator/>
                <MenuItem Header="Выход" Command="{Binding ExitCommand}"/>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</ResourceDictionary>